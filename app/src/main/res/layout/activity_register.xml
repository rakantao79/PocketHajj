<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zamboanga.antao.pockethajj.RegisterActivity"
    android:background="@drawable/img_bg_blur">

    <include layout="@layout/toolbar_transparent" android:id="@+id/toolbar_register"></include>

    <ScrollView
        android:layout_below="@+id/toolbar_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar_register">

            <EditText
                android:id="@+id/et_DisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:layout_marginBottom="12dp"
                android:background="@drawable/background_editext"
                android:textColor="@color/colorStroke"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="Display Name" />

            <EditText
                android:hint="Last Name"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_lastName"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_editext"
                android:inputType="textEmailAddress" />

            <EditText
                android:hint="First Name"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_firstName"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_editext"
                android:inputType="textEmailAddress"/>

            <EditText
                android:hint="Middle Name"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_middleName"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_editext"
                android:inputType="textPersonName"/>

            <EditText
                android:hint="Mobile Number"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_MobileNum"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:maxLength="11"
                android:background="@drawable/background_editext"
                android:inputType="phone"/>

            <LinearLayout
                android:background="@drawable/background_editext"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Gender : "
                    android:textSize="18dp"
                    android:textColor="@color/colorStroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/radiogroup_Gender"
                    android:gravity="center"
                    app:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorStroke"
                        android:text="Male"
                        android:textColor="@color/colorStroke" />

                    <RadioButton
                        android:text="Female"
                        android:buttonTint="@color/colorStroke"
                        android:id="@+id/radioFemale"
                        android:layout_weight="1"
                        android:textColor="@color/colorStroke"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </LinearLayout>

            <EditText
                android:hint="Address"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_pilgrimAddress"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_editext"
                android:inputType="textPersonName"/>

            <LinearLayout
                android:background="@drawable/background_editext"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Civil Status : "
                    android:textSize="18dp"
                    android:textColor="@color/colorStroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:id="@+id/radiogroup_CivilStatus"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioSingle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorStroke"
                        android:text="Single"
                        android:textColor="@color/colorStroke" />

                    <RadioButton
                        android:text="Married"
                        android:buttonTint="@color/colorStroke"
                        android:id="@+id/radioMarried"
                        android:layout_weight="1"
                        android:textColor="@color/colorStroke"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </LinearLayout>

            <EditText
                android:layout_marginTop="8dp"
                android:id="@+id/et_PilgrimCitizenship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:background="@drawable/background_editext"
                android:textColor="@color/colorStroke"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:hint="Citizenship" />

            <EditText
                android:hint="Email"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_email"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_editext"
                android:inputType="textEmailAddress"/>

            <EditText
                android:hint="Password"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColorHint="@color/colorStroke"
                android:id="@+id/et_password"
                android:textColor="@color/colorStroke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/background_editext"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_goldtransparent"
                android:text="Register"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorStroke"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvHaveAccount"
                android:textAlignment="center"
                android:textColor="@color/colorStroke"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have account? Login here"
                android:layout_above="@+id/tvTOA"/>

            <TextView
                android:id="@+id/tvTOA"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="By Signin Up, I agree to the PocketHajj's Term of Agreement."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/colorStroke" />

        </LinearLayout>

    </ScrollView>

    </RelativeLayout>