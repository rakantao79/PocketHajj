<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zamboanga.antao.pockethajj.ForgotPassActivity"
    android:background="@drawable/img_bg_blur">

    <include layout="@layout/toolbar_transparent" android:id="@+id/toolbar_forgotpass"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:layout_below="@+id/toolbar_forgotpass">


        <EditText
            android:id="@+id/etEnterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@drawable/background_editext"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/colorStroke"
            android:textColorHint="@color/colorStroke"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etEnterEmail"
            android:layout_marginTop="19dp"
            android:background="@drawable/btn_goldtransparent"
            android:text="Reset Password"
            android:textColor="@color/colorStroke" />

    </RelativeLayout>

</RelativeLayout>
