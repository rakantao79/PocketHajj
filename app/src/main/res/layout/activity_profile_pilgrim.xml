<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTransparent"
    tools:context="zamboanga.antao.pockethajj.ProfileView.ProfilePilgrimActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_Settings"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/img_profile_img"
        android:layout_below="@+id/toolbar_profilepilgrim"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/toolbar_transparent" android:id="@+id/toolbar_profilepilgrim"/>

    <TextView
        android:id="@+id/tvHajjLastName"
        android:text="Pilgrim Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_Settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorStroke"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvHajjLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHajjLastName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Contact Number"
        android:textColor="@color/colorStroke" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="89dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_goldtransparent"
        android:text="Accept"
        android:textColor="@color/colorStroke" />

</RelativeLayout>
