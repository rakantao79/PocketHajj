<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zamboanga.antao.pockethajj.Fragments.Pilgrim.PilgrimStatusFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/topview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/img_bg1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewPilgrim"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:src="@drawable/img_profile_img" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPilgrimDisplayName"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Display Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPilgrimContactNumber"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textStyle="italic" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="@color/colorGoldTransparent" />

            <TextView
                android:id="@+id/tvPIlgrimLastName"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPilgrimMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPilgrimFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGoldTransparent" />

            <TextView
                android:id="@+id/tvPilgrimAccountStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Account Status: "
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGoldTransparent"/>

            <TextView
                android:id="@+id/tvPilgrimCitizenship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Citizenship : " />

            <TextView
                android:id="@+id/tvPIlgrimAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : " />

            <TextView
                android:id="@+id/tvPilgrimGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender : " />

            <TextView
                android:id="@+id/tvPIlgrimCivilStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil Status : " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGoldTransparent"/>

            <TextView
                android:id="@+id/tvSelectedHajjGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Hajj Guide : " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGoldTransparent"/>

            <!--<TextView-->
                <!--android:id="@+id/tvRequirementsUpdate"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="Requirements Update" />-->

            <!--<TextView-->
                <!--android:id="@+id/tvPilgrimPaid"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="3dp"-->
                <!--android:text="Paid" />-->

            <!--<TextView-->
                <!--android:id="@+id/tvPilgrimBalance"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Balance" />-->

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginTop="8dp"-->
                <!--android:background="@color/colorGoldTransparent"/>-->

            <TextView
            android:id="@+id/tvRequirementsUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Requirements Update" />

            <TextView
                android:id="@+id/tvPilgrimYellowCard"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yellow Card" />

            <!--<TextView-->
                <!--android:id="@+id/tvYellowCardExpiry"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Yellow Card Expiry Date" />-->

            <TextView
                android:id="@+id/tvPilgrimBiometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biometrics" />

            <TextView
                android:id="@+id/tvPilgrimPassport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passport"
                android:layout_marginRight="9dp"
                android:layout_marginEnd="9dp" />

            <!--<TextView-->
                <!--android:id="@+id/tvPilgrimPassportExpiry"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Passport Expiry Date" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorGoldTransparent"/>

            <Button
                android:id="@+id/btnPilgrimProfileSettings"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_goldtransparent"
                android:text="Profile Settings" />

            <Button
                android:id="@+id/btnUpdatePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_blacktransparent"
                android:text="Update Payment"
                android:textColor="@color/colorStroke" />

            <Button
                android:id="@+id/btnSearchHajjGuide"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blacktransparent"
                android:text="Select HajjGuide"
                android:textColor="@color/colorStroke"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
