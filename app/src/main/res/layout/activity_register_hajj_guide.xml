<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="zamboanga.antao.pockethajj.RegisterHajjGuideActivity">

    <include layout="@layout/toolbar_layout" android:id="@+id/toolbar_registerHajj"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_registerHajj"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Hajj Guide"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etMobileNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etIDNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID No"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@drawable/background_editext_white"
            android:padding="8dp"
            android:layout_marginTop="12dp"/>

        <Button
            android:background="@drawable/btn_blacktransparent"
            android:textColor="@color/colorStroke"
            android:id="@+id/btnRegisterHajjGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Register Hajj Guide"/>

    </LinearLayout>

</RelativeLayout>
